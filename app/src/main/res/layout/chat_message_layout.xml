<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/chatMessageLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:paddingTop="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileCircleImageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/default_avatar"/>

    <TextView
        android:id="@+id/fullNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/profileCircleImageView"
        android:padding="2dp"
        android:text="@string/full_name_hint"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullNameTextView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/profileCircleImageView"
        android:background="@drawable/user_message_layout"
        android:padding="5dp"
        android:hint="@string/message_content"
        android:textAlignment="center"
        android:textColor="#eee"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/timestampTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/messageTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:alpha="0"
        android:hint="@string/timestamp"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/messageImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/messageTextView"
        android:layout_below="@+id/messageTextView"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/profileCircleImageView"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:maxHeight="300dp"
        android:maxWidth="300dp"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/loading"/>


</RelativeLayout>